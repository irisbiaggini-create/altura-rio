export default async function handler(req, res) {
  try {
    const response = await fetch("https://www.prefecturanaval.gob.ar/alturas");
    const html = await response.text();

    // Buscar el valor de Santa Fe dentro del HTML
    const match = html.match(/Santa Fe[^0-9]*([0-9]+\.[0-9]+)/);

    if (match && match[1]) {
      res.status(200).json({ altura: match[1] });
    } else {
      res.status(500).json({ error: "No se pudo encontrar la altura" });
    }

  } catch (error) {
    res.status(500).json({ error: error.message });
  }
}
